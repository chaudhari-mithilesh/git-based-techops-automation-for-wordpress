{
  "name": "git-based-techops-automation",
  "version": "1.0.0",
  "description": "GitHub Actions-based WordPress site management automation",
  "main": "index.js",
  "scripts": {
    "test": "bash tests/run_tests.sh",
    "test:unit": "bash tests/run_unit_tests.sh",
    "test:integration": "bash tests/run_integration_tests.sh",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "docs": "jsdoc -c jsdoc.json",
    "validate": "npm run lint && npm run test",
    "prepare": "husky install"
  },
  "keywords": [
    "wordpress",
    "automation",
    "github-actions",
    "techops"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@slack/web-api": "^6.8.1",
    "dotenv": "^16.0.3",
    "winston": "^3.8.2"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.59.0",
    "@typescript-eslint/parser": "^5.59.0",
    "eslint": "^8.38.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "jsdoc": "^4.0.2",
    "lint-staged": "^13.2.1",
    "prettier": "^2.8.7",
    "typescript": "^5.0.4"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=14.0.0"
  }
} 